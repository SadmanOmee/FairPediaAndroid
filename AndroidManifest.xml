<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.omeepc.fairpedia">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/flogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpUser"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.example.omeepc.fairpedia.SignUpUser" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpAuthority">
            <intent-filter>
                <action android:name="com.example.omeepc.fairpedia.SignUpAuthority" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpType"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.example.omeepc.fairpedia.SignUpType" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".NormalUserProfile">
            <intent-filter>
                <action android:name="com.example.omeepc.fairpedia.NormalUserProfile" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NormalUserProfileAndStuffs"
            android:label="@string/title_activity_normal_user_profile_and_stuffs"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AuthorityProfileAndStuffs"
            android:label="@string/title_activity_authority_profile_and_stuffs"
            android:theme="@style/AppTheme" />
        <activity android:name=".SignUpHost" />
        <activity
            android:name=".HostProfileAndStuff"
            android:label="@string/title_activity_host_profile_and_stuff"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>