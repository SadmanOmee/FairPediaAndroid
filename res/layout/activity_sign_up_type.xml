<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"

    tools:context="com.example.omeepc.fairpedia.SignUpType">

    <RadioGroup
        android:id="@+id/radgrp_usertype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.515"
        android:layout_below="@+id/txtview_typeofaccount"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:id="@+id/radbtn_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/normal_userS"
            android:textColor="@android:color/darker_gray"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/radbtn_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="Host"
            android:textColor="@android:color/darker_gray"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/radbtn_authority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="31dp"
            android:text="@string/authorityS"
            android:textColor="@android:color/darker_gray"
            android:textSize="30sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/txtview_typeofaccount"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="163dp"
        android:background="@drawable/gradient"
        android:text="@string/type_of_fairpedia_accountSS"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtview_typeofaccount"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txtview_typeofaccount"
        android:layout_marginBottom="28dp"
        android:background="@drawable/gradient"
        android:text="@string/nextS"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

</android.widget.RelativeLayout>
