<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/qwert"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/normal_discover_rec"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtview_searchresult"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/edttxt_searchkey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:hint="Search by name, location, prodct etc."
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/imgbtn_searchbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_search"
        android:layout_below="@+id/edttxt_searchkey"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="104dp"
        android:layout_marginStart="104dp" />

    <TextView
        android:id="@+id/txtview_searchresult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textAlignment="center"

        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_below="@+id/imgbtn_searchbtn"
        android:layout_alignRight="@+id/imgbtn_searchbtn"
        android:layout_alignEnd="@+id/imgbtn_searchbtn"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/imgbtn_searchbtnfair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edttxt_searchkey"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"
        android:layout_toEndOf="@+id/imgbtn_searchbtn"
        android:layout_toRightOf="@+id/imgbtn_searchbtn"
        app:srcCompat="@drawable/ic_action_name_stall" />

</RelativeLayout>