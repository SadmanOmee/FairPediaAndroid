<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:elevation="3dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
    <ImageView
        android:id="@+id/p_img"
        android:layout_width="340dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        app:srcCompat="@android:drawable/ic_menu_crop" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Product :"
        android:textSize="18sp"
        android:layout_below="@+id/p_img"
        android:layout_alignLeft="@+id/p_img"
        android:layout_alignStart="@+id/p_img" />

    <TextView
        android:id="@+id/p_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18sp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_alignBaseline="@+id/textView29"
        android:layout_alignBottom="@+id/textView29"
        android:layout_toRightOf="@+id/textView51"
        android:layout_toEndOf="@+id/textView51" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView29"
        android:layout_alignStart="@+id/textView29"
        android:layout_below="@+id/textView29"
        android:layout_marginTop="14dp"
        android:text="Category :"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/p_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView33"
        android:layout_alignLeft="@+id/p_name"
        android:layout_alignStart="@+id/p_name"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView33"
        android:layout_alignStart="@+id/textView33"
        android:layout_below="@+id/textView33"
        android:layout_marginTop="16dp"
        android:text="Price :"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/p_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/textView38"
        android:layout_alignBottom="@+id/textView38"
        android:layout_alignLeft="@+id/p_category"
        android:layout_alignStart="@+id/p_category" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView38"
        android:layout_alignStart="@+id/textView38"
        android:layout_below="@+id/textView38"
        android:layout_marginTop="13dp"
        android:text="Current Fair:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/p_cfair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18sp"
        android:layout_above="@+id/textView43"
        android:layout_alignLeft="@+id/p_price"
        android:layout_alignStart="@+id/p_price" />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView40"
        android:layout_alignStart="@+id/textView40"
        android:layout_below="@+id/textView40"
        android:layout_marginTop="15dp"
        android:text="Fair Location:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/p_flocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView43"
        android:layout_alignLeft="@+id/p_cfair"
        android:layout_alignStart="@+id/p_cfair"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView47"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView43"
        android:layout_alignStart="@+id/textView43"
        android:layout_below="@+id/textView43"
        android:layout_marginTop="16dp"
        android:text="Stall No :"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/p_sno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView47"
        android:layout_alignLeft="@+id/p_flocation"
        android:layout_alignStart="@+id/p_flocation"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView49"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView47"
        android:layout_alignStart="@+id/textView47"
        android:layout_below="@+id/textView47"
        android:layout_marginTop="17dp"
        android:text="Stall Name :"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/p_sname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView49"
        android:layout_alignLeft="@+id/p_sno"
        android:layout_alignStart="@+id/p_sno"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView49"
        android:layout_alignStart="@+id/textView49"
        android:layout_below="@+id/textView49"
        android:layout_marginTop="17dp"
        android:text="Available Amount:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/p_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView51"
        android:layout_alignLeft="@+id/p_sname"
        android:layout_alignStart="@+id/p_sname"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView53"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView51"
        android:layout_alignStart="@+id/textView51"
        android:layout_below="@+id/textView51"
        android:layout_marginTop="16dp"
        android:text="Prodct Demand:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/p_demand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/textView53"
        android:layout_alignBottom="@+id/textView53"
        android:layout_alignLeft="@+id/p_amount"
        android:layout_alignStart="@+id/p_amount" />

    <TextView
        android:id="@+id/textView55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView53"
        android:layout_alignStart="@+id/textView53"
        android:layout_below="@+id/textView53"
        android:layout_marginTop="18dp"
        android:text="Product Review:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/p_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView55"
        android:layout_alignLeft="@+id/p_demand"
        android:layout_alignStart="@+id/p_demand"
        android:text="TextView"
        android:textSize="18sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>